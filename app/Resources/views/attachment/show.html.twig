{% extends 'base.html.twig' %}

{% block body %}
    <div class="pull-right">
        <a href="{{ path('attachment_index') }}" class="btn btn-default">Back to the list</a>
        <a href="{{ path('point_show', { 'id': attachment.point.id }) }}" class="btn btn-default">Back to the point</a>
        <a href="{{ path('attachment_edit', { 'id': attachment.id }) }}" class="btn btn-default">Edit</a>

        {{ form_start(delete_form, {'attr': {'style': 'display: inline-block'}}) }}
        <input type="submit" value="Delete" class="btn btn-danger">
        {{ form_end(delete_form) }}
    </div>
    <h1>Attachment</h1>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h2 class="panel-title">Info</h2>
        </div>
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ attachment.id }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ attachment.title }}</td>
                </tr>
                <tr>
                    <th>Path</th>
                    <td>{{ attachment.path }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ attachment.name }}</td>
                </tr>
                <tr>
                    <th>Mimetype</th>
                    <td>{{ attachment.mimeType }}</td>
                </tr>
                <tr>
                    <th>Size</th>
                    <td>{{ attachment.size }}</td>
                </tr>
                <tr>
                    <th>Point</th>
                    <td>
                        <a href="{{ path('point_show', { 'id': attachment.point.id }) }}">{{ attachment.point.title }}</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    {% include 'default/_table_history.html.twig' with {'obj': attachment} %}

{% endblock %}
