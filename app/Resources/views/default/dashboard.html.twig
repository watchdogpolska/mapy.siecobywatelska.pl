{% extends 'base.html.twig' %}
{% macro dashboard_item(name, url) %}
  <div class="panel panel-default">
    {#<div class="panel-heading">#}
    {#<h3 class="panel-title">Panel title</h3>#}
    {#</div>#}
    <div class="list-group">
      <a class="list-group-item" href="{{ url }}">
        {{ name }}
      </a>
    </div>
  </div>
{% endmacro %}

{% block body %}
  <div class="row">
    <div class="col-xs-12 col-md-6 col-lg-3">
      {{ _self.dashboard_item("Mapy", path('map_index')) }}
    </div>
    <div class="col-xs-12 col-md-6 col-lg-3">
      {{ _self.dashboard_item("Mapy", path('point_index')) }}
    </div>
    <div class="col-xs-12 col-md-6 col-lg-3">
      {{ _self.dashboard_item("Mapy", path('icon_index')) }}
    </div>
    <div class="col-xs-12 col-md-6 col-lg-3">
      {{ _self.dashboard_item("Mapy", path('attachment_index')) }}
    </div>
  </div>

{% endblock %}
