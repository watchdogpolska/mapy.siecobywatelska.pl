{% extends 'base.html.twig' %}

{% block body %}
    <div class="pull-right">
        <a href="{{ path('point_new') }}" class="btn btn-default">
            <i class="fa fa-plus" aria-hidden="true"></i>
            Create a new entry
        </a>
    </div>
    <h1>Point list</h1>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h2 class="panel-title">List</h2>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Map</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for point in points %}
                <tr>
                    <td><a href="{{ path('point_show', { 'id': point.id }) }}">{{ point.id }}</a></td>
                    <td>{{ point.title }}</td>
                    <td><a href="{{ path('map_show', { 'id': point.map.id }) }}">{{ point.map.title }}</a></td>
                    <td>
                        <a href="{{ path('point_show', { 'id': point.id }) }}" class="btn btn-default">
                            <i class="fa fa-eye" aria-hidden="true"></i>
                            show
                        </a>
                        <a href="{{ path('point_edit', { 'id': point.id }) }}" class="btn btn-default">
                            <i class="fa fa-pencil" aria-hidden="true"></i>
                            edit
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
