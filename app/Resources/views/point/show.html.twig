{% extends 'base.html.twig' %}

{% block body %}
    <div class="pull-right">
        <a href="{{ path('point_index') }}" class="btn btn-default">Back to the list</a>
        <a href="{{ path('map_show', {'id': point.map.id}) }}" class="btn btn-default">Back to the map</a>
        <a href="{{ path('point_edit', { 'id': point.id }) }}" class="btn btn-default">
            <i class="fa fa-pencil" aria-hidden="true"></i>
            Edit
        </a>
        {{ form_start(delete_form, {'attr': {'style': 'display: inline-block'}}) }}
            <input type="submit" value="Delete" class="btn btn-danger">
        {{ form_end(delete_form) }}
    </div>
    <h1>Point</h1>
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title">Info</h2>
                </div>
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ point.id }}</td>
                        </tr>
                        <tr>
                            <th>Map</th>
                            <td><a href="{{ path('map_show', {'id': point.map.id}) }}">{{ point.map }}</a></td>
                        </tr>
                        {% if point.icon %}
                            <tr>
                                <th>Icon</th>
                                <td><a href="{{ path('icon_show', {'id': point.icon.id}) }}">{{ point.icon.id }}</a></td>
                            </tr>
                        {% endif %}
                        <tr>
                            <th>Title</th>
                            <td>{{ point.title }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ point.description }}</td>
                        </tr>
                        <tr>
                            <th>Lat</th>
                            <td>{{ point.lat }}</td>
                        </tr>
                        <tr>
                            <th>Lng</th>
                            <td>{{ point.lng }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-md-6">
            {% include 'default/_table_history.html.twig' with {'obj': point} %}
        </div>
    </div>


    <div class="panel panel-default">
        <div class="panel-heading">
            <h2 class="panel-title">
                Attachment list <a href="{{ path('attachment_new', {'point': point.id} ) }}" class="btn btn-default btn-xs">
                    <i class="fa fa-plus" aria-hidden="true"></i>
                    Add attachment
                </a>
            </h2>
        </div>
        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for attachment in point.attachments %}
                <tr>
                    <td><a href="{{ path('attachment_show', { 'id': attachment.id }) }}">{{ attachment.id }}</a></td>
                    <td>{{ attachment.title }}</td>
                    <td>
                        <a href="{{ path('attachment_show', { 'id': attachment.id }) }}" class="btn btn-default">
                            <i class="fa fa-eye" aria-hidden="true"></i>
                            show
                        </a>
                        <a href="{{ path('attachment_edit', { 'id': attachment.id }) }}" class="btn btn-default">
                            <i class="fa fa-pencil" aria-hidden="true"></i>
                            edit
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
