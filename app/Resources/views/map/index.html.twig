{% extends 'base.html.twig' %}

{% block body %}
    <div class="pull-right">
        <a href="{{ path('map_new') }}" class="btn btn-default">
            <i class="fa fa-plus" aria-hidden="true"></i> Create a new entry
        </a>
    </div>

    <h1>Map list</h1>

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">List</h3>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for map in maps %}
                <tr>
                    <td><a href="{{ path('map_show', { 'id': map.id }) }}">{{ map.id }}</a></td>
                    <td>{{ map.title }}</td>
                    <td>
                        <a href="{{ path('map_edit', { 'id': map.id }) }}" class="btn btn-default">
                            <i class="fa fa-pencil" aria-hidden="true"></i> edit
                        </a>
                        <a href="{{ path('map_show', { 'id': map.id }) }}" class="btn btn-default">
                            <i class="fa fa-eye" aria-hidden="true"></i> show
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>


{% endblock %}
